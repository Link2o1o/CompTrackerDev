@model DevEnvironment.Models.Participant
@{
    ViewData["Title"] = "Registration";
}

<h1>@ViewData["Title"]</h1>
Please, fill in the form below.
<br>
<form>
    <br />
    <div class="container">
        <div class="form-group form-inline">
            <fieldset>
                <legend>Name: </legend>
                <input asp-for="FirstName" class="form-control" placeholder="First name"/>
                <span asp-validation-for="FirstName"></span>
                <input asp-for="LastName" class="form-control" placeholder="Surname" />
                <span asp-validation-for="LastName"></span>
            </fieldset>
        </div>
        <br>
        <div class="form-group">
            <fieldset>
                <legend>Username: </legend>
                <input asp-for="Username" class="form-control" placeholder="Username" />
            </fieldset>
        </div>
        <br>
        <div class="form-group form-inline">
            <fieldset>
                <legend for="Password">Password: </legend>
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password"></span>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassword"></span>
            </fieldset>
        </div>
        <br>
        <div class="form-group">
            <fieldset>
                <legend>Birthday: </legend>
                <input asp-for="Birthday" class="form-control"/>
            </fieldset>
        </div>
        <br>
        <div class="form-group">
            <fieldset>
                <legend>Gender: </legend>
                <select class="form-control" id="gender" name="gender" required="required" data-msg-required="What is your gender?">
                    <option value="" disabled="disabled" selected="selected">Choose one</option>
                    <option value="01">Male</option>
                    <option value="02">Female</option>
                </select>
            </fieldset>
        </div>
        <br>
        <div class="form-group">
            <fieldset>
                <legend>E-mail:</legend>
                <input asp-for="Email" class="form-control" placeholder="name@example.com">
            </fieldset>
        </div>
        <br>
        <div class="form-group">
            <fieldset>
                <legend>High School Name:</legend>
                <input asp-for="HSName" class="form-control" placeholder="Your High School">
            </fieldset>
        </div>
        <br>
        <div class="form-group">
            <fieldset>
                <legend>Additional Information</legend>
                <label>What college do you want to go after high school:</label>
                <input asp-for="NextCollege" class="form-control" placeholder="Future School">
                <label class="form-group">If you receied any awards, please insert them here:</label>
                <input asp-for="Awards" class="form-control" placeholder="Awards">
                <label>Previous Computer Programming Experience: </label>
                <input asp-for="Experience" class="form-control" />
            </fieldset>
            <br />
        </div>
     <input type="Submit" value="Submit" class="btn btn-info"/>
     </div>
</form>